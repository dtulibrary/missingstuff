<table class="table table-striped <%= dom_class(curation_concern) %> attributes">
  <caption class="table-heading"><h2>Attributes</h2></caption>
  <thead>
  <tr><th>Attribute Name</th><th>Values</th></tr>
  </thead>
  <tbody>
  <%= curation_concern_attribute_to_html(curation_concern, :subtitle, 'Sub-title', { catalog_search_link: true }) %>
  <%= hierarchical_attribute_to_html(curation_concern, :person, 'People', { catalog_search_link: true, localize: {:role => true, :person_id_type => true} }) %>
  <%= hierarchical_attribute_to_html(curation_concern, :organisation, 'Organisation', { catalog_search_link: true, localize: {:role => true} }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :description, 'Abstract') %>
  <%= curation_concern_attribute_to_html(curation_concern, :keyword, 'Keyword') %>
  <%= hierarchical_attribute_to_html(curation_concern, :details, 'Publication details', { catalog_search_link: true }) %>
  <%= hierarchical_attribute_to_html(curation_concern, :book, 'Book', { catalog_search_link: true }) %>
  <%= hierarchical_attribute_to_html(curation_concern, :editor, 'Editor', { catalog_search_link: true }) %>
  <%= hierarchical_attribute_to_html(curation_concern, :series, 'Series', { catalog_search_link: true }) %>
  <%= curation_concern_attribute_to_html(curation_concern, :lang, "Language", {localize: true}) %>
  <%= curation_concern_attribute_to_html(curation_concern, :requester, "Requester", {localize: false}) %>
  <tr>
    <th>Access Rights</th>
    <td>
      <%= permission_badge_for(curation_concern) %>
    </td>
  </tr>
  <%= curation_concern_attribute_to_html(curation_concern, :embargo_release_date, "Embargo Release Date") %>
  <%= curation_concern_attribute_to_html(curation_concern, :lease_expiration_date, "Lease Expiration Date") %>
  <%= curation_concern_attribute_to_html(curation_concern, :rights, "Content License") %>
  </tbody>
</table>

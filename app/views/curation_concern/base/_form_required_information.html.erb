<fieldset class="required">
  <legend>Required Information</legend>

  <%= f.label :lang, 'Language', class: 'select optional control-label' %>
  <%= f.collection_select :lang, [['Undefined', 'und'], ['English', 'eng'] ,['Danish', 'dan'], ['Swedish', 'swe'], ['Norwegian', 'nor'], ['German', 'ger'],  ['Multiple', 'mul']], :last, :first, {}, {class: 'select optional form-control'} %>
  <br/>
  <%= f.input :publication_date, collection: Date.today.year.downto(1960), label:'Publication Year', label_html: {class: ''}, input_html: {class: ''} %>

</fieldset>

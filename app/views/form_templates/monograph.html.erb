<% if record_type.class == BookChapter %>
    <div class="form-group">
        <label class="col-sm-1 control-label">Title</label>
        <div class="col-sm-11 input">
            <%= values[:book_title] %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">Sub-Title</label>
        <div class="col-sm-11 input">
            <%= values[:book_subtitle] %>
        </div>
    </div>
<% end %>
<div class="form-group">
    <label class="col-sm-1 control-label">Publisher</label>
    <div class="col-sm-7 input">
	<%= values[:publisher] %>
    </div>
    <label class="col-sm-1 inline-label">City</label>
    <div class="col-sm-3 inline-input" style="padding-left: 0px;">
	<%= values[:city] %>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-1 control-label">DOI</label>
    <div class="col-sm-3 input">
	<%= values[:doi] %>
    </div>
    <label class="col-sm-1 inline-label">ISBN</label>
    <div class="col-sm-3 inline-input" style="padding-left: 0px;">
	<%= values[:isbn] %>
    </div>
    <label class="col-sm-1 inline-label">e-ISBN</label>
    <div class="col-sm-3 inline-input" style="padding-left: 0px;">
	<%= values[:eisbn] %>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-1 control-label">Year</label>
    <div class="col-sm-3 input">
	<%= values[:year] %>
    </div>
    <label class="col-sm-1 inline-label">Volume</label>
    <div class="col-sm-3 inline-input" style="padding-left: 0px;">
	<%= values[:volume] %>
    </div>
    <label class="col-sm-1 inline-label">Edition</label>
    <div class="col-sm-3 inline-input" style="padding-left: 0px;">
	<%= values[:edition] %>
    </div>
</div>
